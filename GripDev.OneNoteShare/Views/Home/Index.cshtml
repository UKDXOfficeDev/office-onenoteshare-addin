@{
    ViewData["Title"] = "Home Page";
}

<div ng-controller="shareController as vm">
    <h1>Testing OneNote Share</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Thing</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Full Page Url</td>
                <td>{{vm.url}}</td>
            </tr>
            <tr>
                <td>AuthToken</td>
                <td>{{vm.authToken}}</td>
            </tr>
            <tr>
                <td>OneNote Page Url</td>
                <td>{{vm.linkToOneNotePage}}</td>
            </tr>
        </tbody>
    </table>

    <button ng-click="vm.export()">Export to OneNote</button>
    <button ng-click="vm.postPage()">Post page into OneNote</button>
</div>


@section scripts {
    <script src="~/js/shareController.js" asp-append-version="true"></script>
}